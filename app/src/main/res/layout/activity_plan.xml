<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".PlanActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconSize="28dp"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />

    <include
        layout="@layout/appbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:padding="20dp"
                android:text="@string/headline"
                android:textSize="26sp"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                android:textAlignment="textStart"
                android:background="@drawable/grad"
                android:drawableRight="@drawable/headline_icon"
                android:drawablePadding="10dp"
                android:gravity="start" />


            <EditText
                android:id="@+id/personname"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/name"
                android:drawableLeft="@drawable/name"
                android:paddingStart="10dp"
                android:drawablePadding="10dp"
                android:ems="20"
                android:hint="@string/PERSONNAME"
                android:textSize="20sp"
                android:paddingLeft="10dp" />


            <EditText
                android:id="@+id/personphone"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/phone"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="15dp"
                android:ems="15"
                android:hint="@string/PHONENUMBER"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/personemail"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/email"
                android:drawableLeft="@drawable/email"
                android:drawablePadding="10dp"
                android:ems="40"
                android:hint="@string/EMAILID"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/underline"/>

            <EditText
                android:id="@+id/personcurrent"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/from"
                android:drawableLeft="@drawable/from"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/FROM"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/persondest"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/destination"
                android:drawableLeft="@drawable/destination"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/DESTINATION"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

            <EditText
                android:id="@+id/persondate"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/dates"
                android:drawableLeft="@drawable/dates"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/DATE"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/underline"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/headline2"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:background="@color/about"
                android:gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/flight"
                    android:background="@drawable/imageborder"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/train"
                    android:background="@drawable/imageborder"/>

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/car"
                    android:background="@drawable/imageborder"/>

            </LinearLayout>



            <EditText
                android:id="@+id/personmode"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="@string/MODE"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="15dp"
                android:background="@color/underline"/>

            <EditText
                android:id="@+id/personmembers"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:drawableStart="@drawable/members"
                android:drawableLeft="@drawable/members"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="@string/MEMBERS"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="25dp"
                android:background="@color/underline"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="@string/headline3"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@color/about"
                android:gravity="center_horizontal" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:rowCount="3"
                android:columnCount="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/budget"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card1"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardtext"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardno1"
                            android:textSize="22dp"
                            android:textStyle="bold" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/budget"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card2"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardtext"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardno2"
                            android:textSize="22dp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/budget"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card3"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardtext"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardno3"
                            android:textSize="22dp"
                            android:textStyle="bold"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/budget"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/card4"
                            android:textSize="14dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardtext"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cardno4"
                            android:textSize="22dp"
                            android:textStyle="bold"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </GridLayout>



            <EditText
                android:id="@+id/personbudget"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext"
                android:ems="10"
                android:hint="@string/BUDGET"
                android:textSize="20sp"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"/>

            <ImageButton
                android:id="@+id/personbutton"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
                android:src="@drawable/check"
                android:background="@drawable/bookbutton"
                android:text="@string/BUTTON" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:text="@string/submit"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:textSize="18sp"
                android:textStyle="italic"/>

            <Space
                android:layout_height="20dp"
                android:layout_width="410dp"/>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>